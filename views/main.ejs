<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/views/style.css"  />
    <title>Mongodb CRUD Example</title>
</head>
<body>
    
    <h1>Mongodb CRUD Example</h1>
    <%= message %>
    <br>
    <% if (edit_id) { %>
        <h3>Edit</h3>
       
        <form method="post" action="/update_book/<%= edit_id %>">
            <label for="">Title</label>
            <input type="text" name="title" value="<%= edit_book.title %>">
            <label for="">Author</label>
            <input type="text" name="author" value="<%= edit_book.author %>">
            <input type="submit" >
        </form><br><br>
    <% } else { %>
        <h3>Create</h3>
        <form method="post" action="/store_book">
            <label for="">Title</label>
            <input type="text" name="title">
            <label for="">Author</label>
            <input type="text" name="author">
            <input type="submit" >
        </form><br><br>
  
    <% } %>
    
    <ul>
        <% books.forEach(function(book) { %>
            <li><%= book.title %> - <%= book.author %> <a href="/?edit_id=<%= book._id %>">Edit</a> <a href="/?delete_id=<%= book._id %>" onclick="return confirm('Are you sure want to delete?')">Delete</a></li>
        <% }); %>
    </ul>
</body>
</html>
